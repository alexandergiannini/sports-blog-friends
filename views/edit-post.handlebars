<article>
  <a href="/dashboard" class="is-pulled-right" id="back-to-dashboard"> &larr; back to dashboard</a>
  <h2 class="title mt-5" style="margin-left: 14rem">Edit Post</h2>
  <form class="edit-post-form">
    <div>
        <label for="post-title" class="label is-medium" id="edit-label">Post Title:</label>
      <input class="input" name="post-title" type="text" value="{{post.title}}" />
    </div>
    <div>
        <label for="post-content" class="label is-medium" id="edit-label">Post Content:</label>
      <input class="textarea" name="post-content" type="text" value="{{post.post_content}}" />
    </div>
    <div class="column">
    <div class="is-pulled-right is-one-quarter">
       created by you on {{format_date post.created_at}}
      |
      <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
    </div>
    <div class="is-half is-centered">
    <button type="submit" class="button login-btn">Save Post</button>
    <button type="button" class="button delete-post-btn">Delete Post</button>
    </div>
    </div><!--closes flexbox columns -->
  </form>
</article>

{{> comments post.comments}}

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
