    <div class="mb-5 pt-3">
        <h2 class="title pb-4 has-text-centered">Dashboard</h2>
        
        <a href="/dashboard/create/"><button id="create-post" class="button is-primary create-btn">Create New Post</button></a>
        
        
{{#if posts.length}}
    </div>

    {{#each posts as |post|}}
        {{> post-info post}}
            <div class="card-footer">
                <div class="column is-center">
            <button class="button mb-5 mt-5 btn-comment is-info"><a href="/dashboard/edit/{{post.id}}">Edit Post</a></button> 
                </div>
            </div>
        </div>
    {{/each}}

{{else}}
<br></br>

<h4 class="pb-4 user-content dash-post has-text-weight-bold" id="no-posts-text">You don't have any posts</h4>

{{/if}}