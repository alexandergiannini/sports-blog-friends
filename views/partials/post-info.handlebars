    <header class="card-header card-header-title">
        <div class="column">
            <p class=" has-text-primary-light">
            <a href="/post/{{id}}" class="is-capitalized is-pulled-left"> {{title}} here</a></p>
        </div>
        <div class="column">
            <span class=""> </span>
        </div>
    </header>

    <div class="card-content">
        <div class="content has-text-justified">
           <br> {{title}} </br>
            {{post_content}}
        </div>
